{
  "manifest_version": 3,
  "name": "Better Sleep",
  "version": "1.0.0",
  "description": "Plan sleep cycles, track sleep duration, and get gentle bedtime reminders. A simple helper for better rest.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Better Sleep"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}